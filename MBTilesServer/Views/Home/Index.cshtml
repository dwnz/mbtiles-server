@{
    ViewData["Title"] = "Home Page";
}

<div id="map"></div>

@section Scripts
{
    <script>
        mapboxgl.accessToken = '@ViewBag.MapboxToken';
        
        const map = new mapboxgl.Map({
            container: 'map', // container ID
            style: {
                'version': 8,
                'sources': {
                   'nztopo-tiles': {
                       'type': 'raster',
                       'tiles': [
                           '/tiles/{z}/{x}/{y}'
                       ],
                       'scheme': 'tms',
                       'tileSize': 256
                   }
                },
                'layers': [
                   {
                       'id': 'nztopo',
                       'type': 'raster',
                       'source': 'nztopo-tiles'
                   }
                ]
            },
            center: [174.6918153, -41.2442198],
            zoom: 9 // starting zoom
        });
    </script>
}